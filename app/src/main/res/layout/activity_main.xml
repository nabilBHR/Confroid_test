<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:layout_marginHorizontal="50dp"
    >

    <Button
        android:id="@+id/bt_request_token"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Demander un Token" />

    <Button
        android:id="@+id/bt_create_configuartion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nouvelle configuration" />

    <Button
        android:id="@+id/bt_display_configurations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mes configurations" />

    <Button
        android:id="@+id/bt_edit_last"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Modifeir ma configuration actuelle" />


</LinearLayout>



